{
    "parser" : "babel-eslint",
    "parserOptions" : {
      "ecmaVersion" : 7,
      "sourceType" : "module",
      "ecmaFeatures" : {
        "jsx" : true
        }
    },
    "rules": {
        ##### BEST PRACTICES
        "array-callback-return" : [1],
        "class-methods-use-this" : [1],
        "complexity": [2, 4],
        "consistent-return" : [2],
        "curly" : [2, "multi"],
        "default-case" : [1, { "commentPattern" :"^No\\sdefault"}],
        "dot-location" : [1, "property"],
        "dot-notation" : [2, { "allowKeywords": false, "allowPattern": "^[a-zA-Z0-9]+$" }],
        "eqeqeq" : [1, "smart"],

        "no-alert" : [1],
        "no-caller" : [2],
        "no-case-declarations" : [2],
        "no-div-regex" : [1],
        "no-else-return" : [2],
        "no-empty-function" : [2, { "allow" : ["arrowFunctions", "methods", "functions", "constructors"]}],
        "no-empty-pattern" : [2],
        "no-eq-null" : [2],
        "no-eval" : [2],
        "no-extend-native" : [2],
        "no-extra-bind" : [2],
        "no-extra-label" : [1],
        "no-fallthrough" : [2],
        "no-floating-decimal" : [2],
        "no-global-assign" : [2, { "exceptions": [ ]}],
        "no-implicit-coercion" : [1],
        "no-implicit-globals" : [2],
        "no-invalid-this" : [2],
        "no-iterator" : [1],
        "no-lone-blocks" : [2],
        "no-loop-func" : [2],
        "no-magic-numbers" : [2, { "ignore" : [1], "ignoreArrayIndexes": true, "detectObjects": true}],
        "no-multi-spaces" : [2, { "exceptions": { "Property": true, "VariableDeclarator": true, "ImportDeclaration": true }}],
        "no-multi-str" : [2],
        "no-new-func" : [2],
        "no-new-wrappers" : [2],
        "no-new" : [2],
        "no-octal-escape" : [1],
        "no-octal" : [1],
        "no-param-reassign" : [1, { "props": false }],
        "no-proto" : [2],
        "no-redeclare" : [2],

        "no-restricted-properties" : [2],
        "no-return-await" : [2],
        "no-script-url" : [2],
        "no-self-assign" : [2, {"props": true}],
        "no-self-compare" : [2],
        "no-sequences" : [2],
        "no-throw-literal" : [2],
        "no-unmodified-loop-condition" : [2],
        "no-unused-expressions" : [2],
        "no-useless-call" : [2],
        "no-useless-concat" : [2],
        "no-useless-escape" : [2],
        "no-useless-return" : [2],
        "no-void" : [2],

        "no-with" : [2],
        "prefer-promise-reject-errors" : [2],
        "radix" : [2, "as-needed"],
        "require-await" : [2],
        "vars-on-top" : [1],
        "wrap-iife" : [1, "inside"],
        "yoda" : [2, "never", {"onlyEquality" : true }],
        ####### VARIABLES
        "init-declarations" : [2, "always"],
        "no-catch-shadow" : [2],
        "no-delete-var" : [2],
        "no-restricted-globals" : [2],
        "no-shadow-restricted-names" : [2],
        "no-shadow": [2, { "builtinGlobals" : true, "hoist" : "never", "allow": ["done", "resolve", "reject", "cb"]}],
        "no-undef-init" : [2],
        "no-undef" : [2, { "typeof" : true }],
        "no-undefined" : [2],
        "no-unused-vars" : [1],
        "no-use-before-define" : [2],
        ####### NODEJS
        "callback-return" : [2],
        "handle-callback-err" : [1, /\^e(rr)?(or)?$/],
        "no-mixed-requires" : [2, { "allowCall" : true, "grouping" : true}],
        "no-new-require" : [2],
        "no-path-concat" : [2],
        "no-process-env" : [1],
        "no-process-exit" : [2],
        "no-restricted-modules" : [2, { "paths" : []}],
        "no-sync" : [2],
        ###### STYLISTIC ISSUES
        # "array-bracket-spacing" : [2, "never", {"singleValue" : false, "objectsInArrays" : false}],
        "block-spacing" : [2,  "never"],
        "brace-style" : [1, "1tbs", { "allowSingleLine": true }],
        "camelcase" : [1, { "properties": "always" }],
        "comma-dangle" : [1, "only-multiline"],
        "comma-spacing" : [2, {"before" : false, "after" : true}],
        "comma-style" : [2, "last"],
        "computed-property-spacing" : [2, "always"],
        "consistent-this" : [1, "self"],
        "func-call-spacing" : [2],
        "func-name-matching" : [2, "never"],
        "func-names" : [2, "as-needed"],
        "func-style" : [2, "expression", { "allowArrowFunctions": true }],

        "id-length" : [2, {"min" : 2, "properties": never, "exceptions" : ["e", "T"]}],
        # "indent" : [2, "tab", { "SwitchCase": 1 , "MemberExpression": 1, "FunctionDeclaration": {"body": 1, "parameters": 2}, "VariableDeclarator": { "let": 2, "const": 3 }, "CallExpression": {"arguments": 1}, "ArrayExpression": 1, "ObjectExpression": 1}],
        "jsx-quotes" : [2, "prefer-double"],


        # "line-comment-position" : [1, "beside"],
        "lines-around-comment" : [1, {"beforeBlockComment": true, "beforeLineComment": true, "allowBlockStart": true, "allowBlockEnd": true, "allowObjectStart": true, "allowObjectEnd": true, "allowArrayStart": true, "allowArrayEnd": true, }],
        "lines-around-directive" : [2, "always"],
        "max-depth" : [1, {"max" : 3}],
        "max-len" : [1, { "code" : 80, "ignoreUrls": true, "ignoreStrings": true, "ignoreTemplateLiterals": true }],
        "max-lines" : [1, {"max" : 300, "skipBlankLines": true}],
        "max-nested-callbacks" : [1, { "max" : 4}],
        "max-params" : [1, {"max" : 4}],
        "max-statements-per-line" : [2, {"max" : 2}],
        # "max-statements" : [1, { "max" : 7}],
        "multiline-ternary" : [1],
        "new-cap" : [2, { "properties": false }],
        "new-parens" : [1],
        # "newline-after-var" : [1, "never"],
        "newline-before-return" : [1],
        "newline-per-chained-call" : [1],
        "no-array-constructor" : [2],
        "no-bitwise" : [1],
        "no-continue" : [1],
        "no-inline-comments" : [1],
        "no-lonely-if" : [1],
        "no-mixed-operators" : [2],
        "no-mixed-spaces-and-tabs" : [2, "smart-tabs"],
        "no-multi-assign" : [2],
        "no-multiple-empty-lines" : [2, {"max" : 1, "maxEOF" : 1}],
        "no-negated-condition" : [1],
        "no-nested-ternary" : [1],
        "no-new-object" : [2],
        "no-plusplus" : [1, { "allowForLoopAfterthoughts": true }],
        "no-trailing-spaces" : [1],
        "no-unneeded-ternary" : [2],
        "no-whitespace-before-property" : [2],
        "object-curly-newline" : [2, {"multiline" : true}],
        "object-curly-spacing" : [2, "always", { "arraysInObjects": true, "objectsInObjects": false }],
        "object-property-newline" : [2, { "allowMultiplePropertiesPerLine": true }],
        "one-var-declaration-per-line" : [0],
        "one-var" : [0],
        "operator-assignment" : [2, "always"],
        "operator-linebreak" : [1, "before"],
        "padded-blocks" : [2, "never"],
        "quote-props" : [2, "as-needed"],
        "quotes" : [2, "single", { "allowTemplateLiterals" : true}],
        "require-jsdoc" : [1],
        "semi-spacing" : [1, { "before" : false, "after" : true}],
        "semi" : [2, "never"],
        "space-before-blocks" : [2, { "functions": "always", "keywords": "always", "classes": "never" }],
        "space-before-function-paren" : [2, "never"],
        # "space-in-parens" : [2, "as-needed"],
        "space-infix-ops" : [2],
        "space-unary-ops" : [2],
        "spaced-comment" : [2, "always"],
        "wrap-regex" : [1],
        ####### ECMA6
        "arrow-body-style" : [2, "as-needed"],
        "arrow-parens" : [1, "as-needed"],
        "arrow-spacing" : [2, {"before" : true, "after" : true}],
        "constructor-super" : [2],
        "generator-star-spacing" : [1, {"before" : true, "after" : true}],
        "no-class-assign" : [2],
        "no-confusing-arrow" : [1],
        "no-const-assign" : [2],
        "no-dupe-class-members" : [2],
        "no-duplicate-imports" : [2, { "includeExports": true }],
        "no-new-symbol" : [2],

        "no-this-before-super" : [2],
        "no-useless-computed-key" : [2],
        # "no-useless-constructor" : [2],
        "no-useless-rename" : [2],
        "no-var" : [2],
        "object-shorthand" : [2, "always"],
        "prefer-arrow-callback" : [2],
        "prefer-const" : [2, {"destructuring": "all"}],
        "prefer-destructuring" : [2],
        "prefer-rest-params" : [2],
        "prefer-spread" : [1],
        "prefer-template" : [1],
        "require-yield" : [1],
        "rest-spread-spacing" : [2, "never"],

        "template-curly-spacing" : [2, "always"],
        "yield-star-spacing" : [2, {"before": true, "after" : true}],
        ###### POSSIBLE ERRORS
        "no-await-in-loop" : [2],
        "no-cond-assign" : [2, "always"],
        "no-console" : [1],
        "no-constant-condition" : [2],
        "no-control-regex" : [2],
        "no-debugger" : [2],
        "no-dupe-args" : [2],
        "no-dupe-keys" : [2],
        "no-duplicate-case" : [2],
        "no-empty-character-class" : [2],
        "no-empty" : [1, {"allowEmptyCatch": true}],
        "no-ex-assign" : [1],
        "no-extra-boolean-cast" : [2],

        "no-extra-semi" : [2],
        "no-func-assign" : [2],
        "no-inner-declarations" : [2, "both"],
        "no-invalid-regexp" : [2],

        "no-obj-calls" : [2],
        "no-prototype-builtins" : [2],
        "no-regex-spaces" : [2],
        "no-template-curly-in-string" : [2],
        "no-unexpected-multiline" : [1],
        "no-unreachable" : [2],
        "no-unsafe-finally" : [2],
        "no-unsafe-negation" : [2],
        "use-isnan" : [2],
        #"valid-jsdoc" : [2],
        "valid-typeof" : [2, {"requireStringLiterals" : true}]
    },
    # "extends": "eslint:recommended"
}
